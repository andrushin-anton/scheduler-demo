<div class="page-title">
  <div class="title_left">
    <h3>Salesmen <small></small></h3>
  </div>

  <div class="title_right">
    <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
      <%= form_tag sellers_path, :method => 'get' do %>
      <div class="input-group">
          <input type="text" name="search" value="<%= params[:search] %>" class="form-control" placeholder="Search for...">
          <span class="input-group-btn">
          <%= submit_tag "Go!", :name => nil, :class => "btn btn-default search" %>
          </span>
      </div>
      <% end %>
    </div>
  </div>
</div>

<div class="col-md-6 col-sm-6 col-xs-12" style="width:100%">
  <div class="x_panel">
    <div class="x_title">
      <h2><%= link_to 'Add new', new_seller_path %></h2>
      <div class="clearfix"></div>
    </div>
    <div class="x_content">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>#</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>#Edit</th>
          </tr>
        </thead>
        <tbody>
        <% @sellers.each do |user| %>
          <tr>
            <th scope="row"><%= user.id %></th>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.email %></td>
            <td><%= link_to '<i class="fa fa-pencil"></i> Edit'.html_safe, edit_user_path(user), :class => 'btn btn-info btn-xs' %>&nbsp;<% if user.status == 'ACTIVE' %><%= link_to '<i class="fa fa-trash-o"></i> Disable'.html_safe, user, :class => 'btn btn-danger btn-xs',  method: :delete, data: { confirm: 'Are you sure?' } %><% else %><%= link_to 'Activate', user_activate_path(user), method: :patch, :class => 'btn btn-success btn-xs' %>&nbsp;&nbsp;&nbsp;<% end %>&nbsp;<%= link_to '<i class="fa fa-pencil"></i> Change password'.html_safe, password_path(user), :class => 'btn btn-info btn-xs' %>&nbsp;</td>
         </tr>
        <% end %>
        </tbody>
      </table>

      <%= paginate @sellers, :left => 1, :right => 3 %>

    </div>
  </div>
</div>
